#!/usr/bin/bash
# Maintained in linux-init-files.org
id="$1"
[ -z "$id" ] && echo "usage: sway-do-tool id" && exit 1
if swaymsg "[app_id=${id}] focus" &> /dev/null; then
    echo "app_id ${id} found"
else
    if  swaymsg "[class=${id}] focus" &> /dev/null; then
        echo "class ${id} found"
    else
        exit 1
    fi
fi
echo "$id"
