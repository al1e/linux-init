#!/usr/bin/bash
# Maintained in linux-config.org
lock() {
    swaylock -i ~/Pictures/LockScreen/lock -c 000000 &
}

lock_gpg_clear() {
    [ "$1" = gpg_clear ] &&  (echo RELOADAGENT | gpg-connect-agent &>/dev/null )
    lock
}

case "$1" in
    lock)
        lock
        ;;
    lock_gpg_clear)
        lock_gpg_clear
        ;;
    logout)
        exec swaymsg exit
        ;;
    suspend)
        exec systemctl suspend && lock
        ;;
    hibernate)
        exec systemctl hibernate && lock
        ;;
    reboot)
        exec systemctl reboot
        ;;
    shutdown)
        exec systemctl poweroff
        ;;
    blank)
        exec sway-dpms off
        ;;
    unblank)
        exec sway-dpms on
        ;;
    *)
        lock
        ;;
esac

exit 0
